# UNITNAVE Backend - Variables de Entorno

# Database (PostgreSQL en Railway)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# CORS Origins (dominios permitidos)
ALLOWED_ORIGINS=https://unitnave.com,https://www.unitnave.com,http://localhost:3000

# Blender Configuration
BLENDER_PATH=/usr/bin/blender
RENDER_OUTPUT_PATH=/tmp/renders
MAX_CONCURRENT_RENDERS=2

# Storage (para guardar renders)
STORAGE_TYPE=local  # o 's3' para Amazon S3
S3_BUCKET_NAME=unitnave-renders
S3_REGION=eu-west-1

# Secret Key
SECRET_KEY=tu_clave_secreta_muy_segura_aqui

# Email (opcional, para enviar dise√±os)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password
EMAIL_FROM=noreply@unitnave.com
